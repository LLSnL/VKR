CREATE TABLE IF NOT EXISTS DEPARTMENT_OF_SIGNALLING(
	ID SERIAL PRIMARY KEY,
	NAME VARCHAR NOT NULL
);

CREATE TABLE IF NOT EXISTS DICTIONARY_DEVICE(
	ID SERIAL PRIMARY KEY,
	NAME VARCHAR NOT NULL,
	UNIT_OF_MEASUREMENT_SIZE INTEGER NOT NULL DEFAULT 0,
	UNIT_OF_MEASUREMENT_NAME VARCHAR NOT NULL,
	VALUE_OF_TECHNICAL_UNIT_FOR_FIRST_AND_SECOND_CATEGORIES INTEGER NOT NULL DEFAULT 0,
	VALUE_OF_TECHNICAL_UNIT_FOR_THIRD_AND_FORTH_CATEGORIES INTEGER NOT NULL DEFAULT 0,
	VALUE_COEFFICIENT INTEGER NOT NULL DEFAULT 0
);

CREATE TABLE IF NOT EXISTS DEVICE(
	ID SERIAL PRIMARY KEY,
	NAME VARCHAR NOT NULL,
	NUMBER_OF_UNITS INTEGER NOT NULL DEFAULT 0,
	NUMBER_OF_PATHS_COEFFICIENT INTEGER NOT NULL DEFAULT 0,
	EXPIRATION_COEFFICIENT DECIMAL NOT NULL DEFAULT 0,
	DICTIONARY_ID INTEGER NOT NULL,
	DOS_ID INTEGER NOT NULL,
	FOREIGN KEY(DICTIONARY_ID) REFERENCES DICTIONARY_DEVICE(ID),
	FOREIGN KEY(DOS_ID) REFERENCES DEPARTMENT_OF_SIGNALLING(ID)
);